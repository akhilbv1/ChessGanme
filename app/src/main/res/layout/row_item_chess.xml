<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <View
        android:id="@+id/chess_block"
        android:layout_width="80dp"
        android:layout_height="60dp"
        tools:background="@color/brown"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/chess_piece"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        tools:src="@drawable/ic_rb"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />




    <TextView
        android:id="@+id/tvBlockNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:visibility="visible"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="12sp"
        android:layout_marginStart="10dp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/highlight"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="visible"
        android:src="@drawable/ic_highight"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="@+id/chess_block"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/chess_block"
        />

</androidx.constraintlayout.widget.ConstraintLayout>